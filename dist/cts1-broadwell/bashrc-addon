# Add Spack shell
source /opt/spack/share/spack/setup-env.sh
spack env activate /opt/spack/var/spack/environments/mpich-env

# Add the view directories to paths
export PATH=/opt/spack/view/bin:$PATH
export LD_LIBRARY_PATH=/opt/spack/view/lib:$LD_LIBRARY_PATH
export CPATH=/opt/spack/view/include:$CPATH
